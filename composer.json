{
    "name": "anuzpandey/laravel-livewire-tables-helper",
    "description": "A small reusable, utility package for livewire tables package from rappasoft.",
    "keywords": [
        "AnuzPandey",
        "laravel",
        "laravel-livewire-tables-helper"
    ],
    "homepage": "https://github.com/anuzpandey/laravel-livewire-tables-helper",
    "license": "MIT",
    "authors": [
        {
            "name": "AnuzPandey",
            "email": "anuzbvbmaniac123@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^10.0||^11.0",
        "rappasoft/laravel-livewire-tables": "^3.2",
        "spatie/laravel-package-tools": "^1.14.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "AnuzPandey\\LaravelLivewireTablesHelper\\": "src/",
            "AnuzPandey\\LaravelLivewireTablesHelper\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AnuzPandey\\LaravelLivewireTablesHelper\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-laravel-livewire-tables-helper --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AnuzPandey\\LaravelLivewireTablesHelper\\LaravelLivewireTablesHelperServiceProvider"
            ],
            "aliases": {
                "LaravelLivewireTablesHelper": "AnuzPandey\\LaravelLivewireTablesHelper\\Facades\\LaravelLivewireTablesHelper"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
